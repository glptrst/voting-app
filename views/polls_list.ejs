<%- include('header'); -%>

<% if (!polls.length) { %>
    Gosh, there are no polls :O
<% } else { %>
    <div class="list-group">
	<% polls.forEach(poll => { %>
	    <a href="/poll?title=<%= poll.title %>" class="list-group-item list-group-item-action"><%= poll.title %></a>
	<% }) %>
    </div>
<% } %>

<%- include('footer'); -%>
